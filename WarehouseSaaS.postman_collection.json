{
  "info": {
    "name": "Warehouse SaaS API",
    "_postman_id": "warehouse-saas-collection",
    "description": "API collection for frontend development",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Auth - Login",
      "request": {
        "method": "POST",
        "header": [{"key": "Content-Type", "value": "application/json"}],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"username\": \"owner\",\n  \"password\": \"password123\"\n}"
        },
        "url": {
          "raw": "http://localhost:8000/api/token/",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8000",
          "path": ["api", "token"]
        }
      }
    },
    {
      "name": "Auth - Refresh Token",
      "request": {
        "method": "POST",
        "header": [{"key": "Content-Type", "value": "application/json"}],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"refresh\": \"<refresh_token>\"\n}"
        },
        "url": {
          "raw": "http://localhost:8000/api/token/refresh/",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8000",
          "path": ["api", "token", "refresh"]
        }
      }
    },
    {
      "name": "Companies",
      "item": [
        {
          "name": "List Companies",
          "request": {
            "method": "GET",
            "header": [{"key": "Authorization", "value": "Bearer <access_token>"}],
            "url": {"raw": "http://localhost:8000/api/companies/"}
          }
        },
        {
          "name": "Create Company",
          "request": {
            "method": "POST",
            "header": [
              {"key": "Content-Type", "value": "application/json"},
              {"key": "Authorization", "value": "Bearer <access_token>"}
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"My Company\"\n}"
            },
            "url": {"raw": "http://localhost:8000/api/companies/"}
          }
        }
      ]
    },
    {
      "name": "Warehouses",
      "item": [
        {
          "name": "List Warehouses",
          "request": {
            "method": "GET",
            "header": [{"key": "Authorization", "value": "Bearer <access_token>"}],
            "url": {"raw": "http://localhost:8000/api/warehouses/"}
          }
        },
        {
          "name": "Create Warehouse",
          "request": {
            "method": "POST",
            "header": [
              {"key": "Content-Type", "value": "application/json"},
              {"key": "Authorization", "value": "Bearer <access_token>"}
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Warehouse A\",\n  \"location\": \"City Center\"\n}"
            },
            "url": {"raw": "http://localhost:8000/api/warehouses/"}
          }
        }
      ]
    },
    {
      "name": "Products",
      "item": [
        {
          "name": "List Products",
          "request": {
            "method": "GET",
            "header": [{"key": "Authorization", "value": "Bearer <access_token>"}],
            "url": {"raw": "http://localhost:8000/api/products/"}
          }
        },
        {
          "name": "Create Product",
          "request": {
            "method": "POST",
            "header": [
              {"key": "Content-Type", "value": "application/json"},
              {"key": "Authorization", "value": "Bearer <access_token>"}
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Product 1\",\n  \"sku\": \"P001\",\n  \"price\": 50\n}"
            },
            "url": {"raw": "http://localhost:8000/api/products/"}
          }
        }
      ]
    },
    {
      "name": "Transfers",
      "item": [
        {
          "name": "List Transfers",
          "request": {
            "method": "GET",
            "header": [{"key": "Authorization", "value": "Bearer <access_token>"}],
            "url": {"raw": "http://localhost:8000/api/transfers/"}
          }
        },
        {
          "name": "Create Transfer",
          "request": {
            "method": "POST",
            "header": [
              {"key": "Content-Type", "value": "application/json"},
              {"key": "Authorization", "value": "Bearer <access_token>"}
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"product\": 1,\n  \"from_warehouse\": 1,\n  \"to_warehouse\": 2,\n  \"quantity\": 10\n}"
            },
            "url": {"raw": "http://localhost:8000/api/transfers/"}
          }
        }
      ]
    },
    {
      "name": "Stock Adjustment (Employee Only)",
      "request": {
        "method": "POST",
        "header": [
          {"key": "Content-Type", "value": "application/json"},
          {"key": "Authorization", "value": "Bearer <employee_access_token>"}
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"product_id\": 1,\n  \"quantity\": 5,\n  \"operation\": \"in\"\n}"
        },
        "url": {"raw": "http://localhost:8000/api/adjust-stock/"}
      }
    }
  ]
}

#Replace <access_token> and <employee_access_token> with actual JWT tokens from login